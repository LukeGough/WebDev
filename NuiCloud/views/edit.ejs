<% include partials/header %>
<!--   <div class="container"> -->
    <div class="row">
       <div class="col-md-3"></div>
       <div class="col-md-6">
        <div class="card bg-dark mb-3">
          <div class="row no-gutters text-white">
            <div class="col-md-12">
              <div class="card-header">
                <h1 class="text-capitalized">Editing <%= widget.name %> Widget</h1>  
              </div>
            </div>
          </div>
          <div class="row no-gutters bg-light text-black">
            <div class="card-body">
             <div>
               <form action="/dashboard/<%= widget._id %>/?_method=PUT" method="POST">
                 <div class="form-group">
                  <input class="form-control" type="text" name="widget[name]" value="<%= widget.name %>">
                 </div>
                 <div class="form-group">
                   <input class="form-control" type="text" name="widget[image]" value="<%= widget.image %>">  
                 </div>
                 <div class="form-group">
                   <input class="form-control" type="text" name="widget[description]" value="<%= widget.description %>">
                 </div>
                 <div class="form-group">
                   <input class="form-control" type="text" name="widget[url]" value="<%= widget.url %>">
                 </div>
                 <div class="form-group">
                   <a class="btn btn-dark" href="/dashboard/<%= widget._id %>">Back</a>
                   <button class="btn btn-md btn-warning">Update</button>
                 </div>
               </form>
              </div>
             </div>
            </div>
        </div>
    </div>
<!--   </div> -->
<% include partials/footer %>